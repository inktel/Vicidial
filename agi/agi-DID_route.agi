		}
	$did_extension = "$ServerString$voicemail_dump_exten$voicemail_ext";
	$did_route = 'EXTEN';
	}


### Route call to a VICIDIAL Inbound Group
if ($did_route =~ /IN_GROUP/)
	{
	$did_extension = "99909$S$did_id$S$S$S$route_type";
	$exten_context = $ext_context;
	$did_route = 'EXTEN';
